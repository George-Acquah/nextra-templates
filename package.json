{
  "name": "nextra-templates",
  "private": true,
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@10.13.1",
  "workspaces": [
    "templates/*",
    "features/*",
    "packages/*"
  ],
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "clsx": "^2.1.1",
    "fs-extra": "^11.3.2",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-smart-merge": "^1.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.36.0",
    "eslint-config-next": "15.5.4",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.3",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "install-all": "pnpm install",
    "build": "pnpm -r build",
    "dev": "pnpm -r --filter base dev -p 3000",
    "dev:t:blog": "pnpm -r --filter template-blog dev",
    "dev:t:theme": "pnpm -r --filter template-theme dev",
    "dev:f:blog": "pnpm -r --filter feature-blog dev -p 3100",
    "dev:f:theme": "pnpm -r --filter feature-theme dev -p 3101",
    "prepare": "pnpm husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix --no-warn-ignored",
    "format": "prettier --write .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "validate": "pnpm lint && pnpm test:run && pnpm build",
    "clean": "pnpm -r exec rm -rf dist .next node_modules .turbo"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.{js,ts,tsx}": [
      "eslint --fix --no-warn-ignored"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
